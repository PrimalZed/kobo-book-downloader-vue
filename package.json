{
  "name": "kobo-book-downloader-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "vite-node --watch server/index.ts",
    "dev": "concurrently 'npm:dev:frontend' 'npm:dev:backend'",
    "build": "npm run build:clean && npm run build:env && npm run build:frontend && npm run build:backend",
    "build:clean": "rimraf dist && node -e \"require('make-dir')('dist')\"",
    "build:env": "vite-node dotenv-bundle",
    "build:frontend": "vite build",
    "build:backend": "rollup --config rollup.config.ts --configPlugin \"rollup-plugin-typescript2={tsconfig: 'tsconfig.node.json'}\"",
    "preview": "vite preview",
    "test:unit": "vitest",
    "type-check": "vue-tsc --build --force"
  },
  "dependencies": {
    "@tanstack/vue-query": "^5.28.9",
    "@tanstack/vue-query-devtools": "^5.29.0",
    "@types/vhost": "^3.0.9",
    "aes-js": "^3.1.2",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "file-saver": "^2.0.5",
    "http-proxy-middleware": "^3.0.0",
    "jszip": "^3.10.1",
    "luxon": "^3.4.4",
    "multer": "^1.4.5-lts.1",
    "pinia": "^2.1.7",
    "sha.js": "^2.4.11",
    "vhost": "^3.0.2",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/aes-js": "^3.1.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/file-saver": "^2.0.7",
    "@types/http-proxy": "^1.17.14",
    "@types/jsdom": "^21.1.6",
    "@types/luxon": "^3.4.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.28",
    "@types/sha.js": "^2.4.4",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "dotenv-expand": "^11.0.6",
    "jsdom": "^24.0.0",
    "make-dir": "^4.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.14.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "~5.4.0",
    "vite": "^5.1.6",
    "vite-node": "^1.4.0",
    "vitest": "^1.4.0",
    "vue-tsc": "^2.0.6"
  }
}
